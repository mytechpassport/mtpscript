{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MTPScript",
  "scopeName": "source.mtp",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#effects"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "match": "\"(?:\\\\.|[^\"\\\\])*\""
        },
        {
          "name": "string.quoted.single",
          "match": "'(?:\\\\.|[^'\\\\])*'"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mtpscript",
          "match": "\\b(func|record|union|enum|if|else|match|return|let|uses|serve)\\b"
        },
        {
          "name": "keyword.operator.mtpscript",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.mtpscript",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.mtpscript",
          "match": "\\b(Int|String|Bool|Unit|Option|Result)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mtpscript",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.mtpscript" },
            "2": { "name": "entity.name.function.mtpscript" }
          }
        },
        {
          "name": "meta.function-call.mtpscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.mtpscript" }
          }
        }
      ]
    },
    "effects": {
      "patterns": [
        {
          "name": "entity.name.effect.mtpscript",
          "match": "\\b(DbRead|DbWrite|HttpOut|Log)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mtpscript",
          "match": "(->|=>|::|:=|\\|>|\\|\\||&&|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.mtpscript",
          "match": "(\\+|\\-|\\*|/|%)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.mtpscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
