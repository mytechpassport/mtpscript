{
  "name": "mtpscript-cursor",
  "displayName": "MTPScript",
  "description": "MTPScript language support for Cursor",
  "version": "5.1.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mtpscript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mtpscript",
        "aliases": ["MTPScript", "mtp"],
        "extensions": [".mtp"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mtpscript",
        "scopeName": "source.mtp",
        "path": "./syntaxes/mtpscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mtpscript.compile",
        "title": "Compile MTPScript",
        "category": "MTPScript"
      },
      {
        "command": "mtpscript.run",
        "title": "Run MTPScript",
        "category": "MTPScript"
      },
      {
        "command": "mtpscript.serve",
        "title": "Serve MTPScript",
        "category": "MTPScript"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mtpscript.compile",
          "when": "resourceExtname == .mtp"
        },
        {
          "command": "mtpscript.run",
          "when": "resourceExtname == .mtp"
        },
        {
          "command": "mtpscript.serve",
          "when": "resourceExtname == .mtp"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MTPScript",
      "properties": {
        "mtpscript.server.path": {
          "type": "string",
          "default": "mtpsc",
          "description": "Path to the MTPScript language server executable"
        },
        "mtpscript.server.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
